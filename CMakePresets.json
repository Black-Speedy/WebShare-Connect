{
    "version": 3,
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Ninja",
            "environment": {
                "VCPKG_ROOT": "F:/Tools/vcpkg"
            },
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "F:/Tools/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_MAKE_PROGRAM": "F:/Programs/Microsoft Visual Studio/2022/Community/Common7/IDE/CommonExtensions/Microsoft/CMake/Ninja/ninja.exe"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64-debug-win",
            "displayName": "x64 Debug Windows",
            "inherits": "windows-base",
            "binaryDir": "${sourceDir}/compiled/build/${presetName}",
            "installDir": "${sourceDir}/compiled/install/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-release-win",
            "displayName": "x64 Release Windows",
            "inherits": "windows-base",
            "binaryDir": "${sourceDir}/compiled/build/${presetName}",
            "installDir": "${sourceDir}/compiled/install/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x86-debug-win",
            "displayName": "x86 Debug Windows",
            "inherits": "windows-base",
            "binaryDir": "${sourceDir}/compiled/build/${presetName}",
            "installDir": "${sourceDir}/compiled/install/${presetName}",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x86-release-win",
            "displayName": "x86 Release Windows",
            "inherits": "windows-base",
            "binaryDir": "${sourceDir}/compiled/build/${presetName}",
            "installDir": "${sourceDir}/compiled/install/${presetName}",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "x64-debug-lin",
            "displayName": "x64 Debug Linux",
            "inherits": "linux-base",
            "binaryDir": "${sourceDir}/compiled/build/${presetName}",
            "installDir": "${sourceDir}/compiled/install/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-release-lin",
            "displayName": "x64 Release Linux",
            "inherits": "linux-base",
            "binaryDir": "${sourceDir}/compiled/build/${presetName}",
            "installDir": "${sourceDir}/compiled/install/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x86-debug-lin",
            "displayName": "x86 Debug Linux",
            "inherits": "linux-base",
            "binaryDir": "${sourceDir}/compiled/build/${presetName}",
            "installDir": "${sourceDir}/compiled/install/${presetName}",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x86-release-lin",
            "displayName": "x86 Release Linux",
            "inherits": "linux-base",
            "binaryDir": "${sourceDir}/compiled/build/${presetName}",
            "installDir": "${sourceDir}/compiled/install/${presetName}",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Configure preset using toolchain file",
            "displayName": "Configure preset using toolchain file",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/compiled/build/${presetName}",
            "installDir": "${sourceDir}/compiled/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        }
    ]
}
